{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "ESNext",               
    "moduleResolution": "node",      
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,          
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
